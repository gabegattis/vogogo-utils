#!/usr/bin/env node
'use strict';
var Vogogo = require('../lib/vogogo');
var config = require('../config');

if (!process.argv[2] || process.argv[3]) {
  console.log('usage: ./getTransaction <id>');
  process.exit();
}

var params = {
  id: process.argv[2]
};

var options = config.authParams;
options.apiPrefix = config.environments[config.defaultEnvironment];

var vogogo = new Vogogo(options);

vogogo.getTransaction(params, function(err, transaction) {
  if (err) {
    console.log(err);
  } else if (!transaction) {
    console.log('no results from Vogogo');
  } else {
    console.log(transaction);
  }
});
